{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "CommonJS",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "./src",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
